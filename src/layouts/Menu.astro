---
import { menuName, pages } from "../assets/constants"
import Link from "../components/ui/Link.astro"
---

<nav class="w-full relative space-y-0.5">
    <h2 class="absolute top-0 right-0 small">{menuName}</h2>
    {
        pages.map(page => (
            <Link link={page.link} variant="normal" className="justify-start font-medium md:text-sm">{page.name}</Link>
        ))
    }
</nav>