---
import Layout from '../layouts/Layout.astro';
import Menu from '../layouts/Menu.astro';
import Footer from '../layouts/Footer.astro';
import HeaderNav from '../layouts/HeaderNav.astro';
import { page404, text404 } from '../assets/constants';
---

<Layout>
	<main class="responsive-x my-14">
		<HeaderNav>
            <h1 class="text-end">{page404}</h1>
        </HeaderNav>
		
		<div class="mt-7 md:mt-9 grid grid-cols-1 sm:grid-cols-3 gap-7 md:gap-16">
			<article class="sm:col-span-2 text-5xl md:text-7xl xl:text-9xl">
                {text404}
			</article>

			<Menu />
		</div>
	</main>

	<Footer />
</Layout>