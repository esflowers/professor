---
interface Props {
    size?: string,
    stroke?: string
}

const { size = '20', stroke = '1.5' }: Props = Astro.props;
---

<svg width={size} height={size} viewBox="0 0 24 24" stroke-width={stroke} class="transition-transform duration-150 group-hover:-translate-x-0.5" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M21 12L3 12M3 12L11.5 3.5M3 12L11.5 20.5" stroke="currentColor" stroke-width={stroke} stroke-linecap="round" stroke-linejoin="round"></path>
</svg>